{
    "app-id": "dev.salaniLeo.forecast",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "forecast",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
  	"data/dependencies/python3-requests.json",
        {
            "name": "forecast",
            "buildsystem": "meson",
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://github.com/SalaniLeo/Forecast",
                    "tag" : "1.1.0",
                    "commit" : "a275a142d11328dc5de8f828d0f5b8e388fbf8c4"
                }
            ],
            "build-options": {
                "env": {
                    "WEATHER_TOKEN": "fe717eebc0eb0b5d9a534b6f6146bc15"
                }
            },
            "dependencies": [
                "python3-requests"
            ]
        }
    ]
}
