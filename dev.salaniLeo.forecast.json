{
    "app-id": "dev.salaniLeo.forecast",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "forecast",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
  	"data/dependencies/python3-requests.json",
        {
            "name": "forecast",
            "buildsystem": "meson",
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://github.com/SalaniLeo/Forecast",
                    "tag" : "1.1.0",
                    "commit" : "5b29d0a60b922dce189e73c23e6e44488a37d8e1"
                }
            ],
            "build-commands": [
                "echo 'API_KEY=${API_KEY}' >> .env",
                "source .env",
            ],
            "dependencies": [
                "python3-requests"
            ]
        }
    ]
}
